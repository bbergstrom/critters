<% if(!@top_critters.nil?) %>
<table class="clearfix critters top_critters">
  <caption>Top 5 Critters</caption>
  <thead>
    <tr>
      <th>Player</th>
      <th>Name</th>
      <th>Domain</th>
      <th>Level</th>
      <th>Quality</th>
    </tr>
  </thead>

<% @top_critters.each do |critter| %>
  <tr>
    <td><%= link_to critter.user.username, critter.user %></td>
    <td><%= link_to critter.name, critter %></td>
    <td><%= critter.domain %></td>
    <td><%= critter.level %></td>
    <td><%= critter.quality %></td>
  </tr>
<% end %>
</table>
<% end %>
