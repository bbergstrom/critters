<%= form_for(@critter) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <% if params[:action] == 'new' %>
    <div class="field">
      <%= f.label :url %><br />
      <%= f.text_field :url %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
