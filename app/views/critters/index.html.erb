<%= link_to 'New Critter', new_critter_path, :class => 'button right' %>
<table class="clearfix critters">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Sex</th>
      <th>Level</th>
      <th>Hp</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @critters.each do |critter| %>
  <tr>
    <td><%= critter.name %></td>
    <td><%= critter.url %></td>
    <td><%= critter.sex %></td>
    <td><%= critter.level %></td>
    <td><%= critter.hp %></td>
    <td><%= link_to 'Show', critter %></td>
    <td><%= link_to 'Edit', edit_critter_path(critter) %></td>
    <td><%= link_to 'Destroy', critter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
